---
import { ClientRouter } from 'astro:transitions';

import { Schema } from 'astro-seo-schema';

import SpeedInsights from '@vercel/speed-insights/astro';

import Breadcrumbs from '../components/Breadcrumbs.astro';
import Dots from '../components/Dots.astro';
import Hosts from '../components/Hosts.astro';
import InfoCard from '../components/InfoCard.astro';
import Platforms from '../components/Platforms.astro';
import Player from '../components/Player';
import ShowArtwork from '../components/ShowArtwork.astro';

import { getShowInfo } from '../lib/rss';
import starpodConfig from 'starpod.config';

import '../styles/global.css';

const show = await getShowInfo();

export interface Props {
  /**
   * If defined, this will override the default canonical URL.
   */
  canonicalURL?: URL;
  description?: string;
  imageUrl?: string;
  title: string;
}

const { imageUrl, title } = Astro.props;

const canonicalURL =
  Astro.props.canonicalURL ?? new URL(Astro.url.pathname, Astro.site);
const description = Astro.props.description ?? starpodConfig.description;

const siteUrl = 'https://overcommitted.dev';
const keywords = [
  'software engineering podcast',
  'tech careers',
  'developer interviews',
  'programming insights',
  'GitHub',
  'open source',
  'career growth',
  'imposter syndrome',
  'technical debt',
  'code quality',
  'continuous learning',
  'software development',
  'engineering culture',
  'developer community'
];
---

<!doctype html>
<html class="scrollbar-thin" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="canonical" href={canonicalURL} />

    <!-- Keywords for LLM and search engine discoverability -->
    <meta name="keywords" content={keywords.join(', ')} />

    <!-- Open Graph Metadata -->
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content={show.title} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl ?? show.image} />
    <meta property="og:image:alt" content={`${show.title} podcast artwork`} />

    <!-- Twitter Card Metadata -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@brittanyellich" />
    <meta name="twitter:creator" content="@brittanyellich" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl ?? show.image} />
    <meta name="twitter:image:alt" content={`${show.title} podcast artwork`} />

    {
      starpodConfig.platforms.appleIdNumber && (
        <meta
          name="apple-itunes-app"
          content={`app-id=${starpodConfig.platforms.appleIdNumber}`}
        />
      )
    }

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Title -->
    <title>{title}</title>

    <!-- Description -->
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />

    <!-- JSON-LD Structured Data for PodcastSeries -->
    <Schema
      slot="head"
      item={{
        '@context': 'https://schema.org',
        '@type': 'PodcastSeries',
        name: show.title,
        description: show.description,
        abstract: starpodConfig.blurb,
        url: siteUrl,
        webFeed: starpodConfig.rssFeed,
        image: show.image,
        inLanguage: 'en-US',
        genre: ['Technology', 'Education', 'Career Development'],
        keywords: keywords.join(', '),
        productionCompany: {
          '@type': 'Organization',
          name: 'Overcommitted',
          url: siteUrl
        },
        publisher: {
          '@type': 'Organization',
          name: 'Overcommitted',
          url: siteUrl,
          logo: {
            '@type': 'ImageObject',
            url: show.image
          }
        },
        contributor: starpodConfig.hosts.map(host => ({
          '@type': 'Person',
          name: host.name,
          description: host.bio,
          image: host.img,
          url: host.website || host.github,
          sameAs: [host.github, host.bluesky, host.website].filter(Boolean)
        })),
        sameAs: [
          starpodConfig.platforms.apple,
          starpodConfig.platforms.spotify,
          starpodConfig.platforms.youtube,
          starpodConfig.platforms.amazonMusic,
          starpodConfig.platforms.bluesky
        ].filter(Boolean),
        potentialAction: {
          '@type': 'ListenAction',
          target: [
            {
              '@type': 'EntryPoint',
              urlTemplate: starpodConfig.platforms.apple,
              actionPlatform: 'http://schema.org/DesktopWebPlatform'
            },
            {
              '@type': 'EntryPoint', 
              urlTemplate: starpodConfig.platforms.spotify,
              actionPlatform: 'http://schema.org/DesktopWebPlatform'
            }
          ]
        }
      } as any}
    />

    <!-- Additional JSON-LD for WebSite with episode count -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: show.title,
      url: siteUrl,
      description: description,
      inLanguage: 'en-US',
      publisher: {
        '@type': 'Organization',
        name: 'Overcommitted',
        url: siteUrl
      }
    })} />

    <slot name="head" />

    <SpeedInsights />
    <ClientRouter />
  </head>
  <body
    class="font-inter text-light-text-body antialiased dark:bg-dark-background dark:text-dark-text-body"
  >
    <header
      class="scrollbar-thin lg:fixed lg:inset-y-0 lg:left-0 lg:flex lg:w-112 lg:items-start lg:overflow-y-auto xl:w-120"
    >
      <div class="relative z-10 mx-auto lg:min-h-full lg:flex-auto">
        <div
          class="m-2 rounded-lg bg-light-card pb-4 pt-10 lg:pb-12 lg:pt-16 dark:bg-dark-card"
        >
          <ShowArtwork image={show.image} />

          <div class="px-4 sm:px-6 md:px-4 lg:px-16">
            <p
              class="mt-8 text-center text-2xl font-bold text-light-text-heading lg:text-left dark:text-white"
            >
              {show.title}
            </p>

            <p class="mt-2 text-center text-lg lg:text-left">
              {starpodConfig.blurb}
            </p>
          </div>

          <hr class="my-3 mx-auto w-64" />

          <div class="px-4 sm:px-6 md:px-4 lg:px-16">
            <p class="mt-2 text-center text-lg lg:text-left font-bold underline">
              <a href="https://discord.gg/d9gZyYuqKd" target="_blank" rel="noopener noreferrer">Join our Discord Server</a>
            </p>
            <p class="mt-2 text-center text-lg lg:text-left font-bold underline">
              <a href="/blog">Check out our blog</a>
            </p>
          </div>

          <hr class="my-3 mx-auto w-64" />

          <div class="px-4 sm:px-6 md:px-4 lg:px-16">
            <Platforms />
          </div>
          <div class="hidden lg:block">
            <Hosts />
          </div>
        </div>

        <div class="hidden lg:block">
          <InfoCard />
        </div>
      </div>
    </header>
    <main
      class="mx-2 rounded-lg bg-light-card lg:relative lg:ml-112 lg:min-h-screen xl:ml-120 dark:bg-dark-card"
    >
      <div class="relative mt-2 pt-16">
        <div
          class="bg-gradient-light absolute left-0 right-0 top-0 z-0 h-80 w-full opacity-30 dark:bg-gradient-dark"
        >
        </div>

        <Dots />

        <div class="max-w-4xl">
          <div
            class:list={[
              'relative z-20 mb-12 border-b pb-6 lg:mb-16 lg:pb-10 dark:border-dark-border',
              Astro.url.pathname === '/' && 'hidden'
            ]}
          >
            <div class="ml-8 lg:ml-18">
              <Breadcrumbs title={title} />
            </div>
          </div>

          <slot />
        </div>
      </div>
    </main>
    <footer class="block lg:hidden">
      <Hosts />
      <InfoCard />
    </footer>
    <div id="audio-player">
      <Player client:only="preact" transition:persist="player" />
    </div>
  </body>
</html>
